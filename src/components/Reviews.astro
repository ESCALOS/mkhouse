---
import { getI18N } from "@/i18n";
import ReviewSlider from "@/components/ReviewSlider";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, items } = i18n.home.reviews;
---

<section id="google-reviews">
  <div class="py-24 px-4 mx-auto max-w-7xl">
    <h2 class="pb-8 text-4xl text-center font-semibold">{title}</h2>
    <ReviewSlider reviews={items} client:visible />
  </div>
</section>
