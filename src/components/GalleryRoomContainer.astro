---
import { getI18N } from "@/i18n";
import GalleryRoom from "./GalleryRoom";
import { optimizeImages } from "@/utils/optimizeImages";
import Gal1 from "@/images/gallery/gal1.png";
import Gal2 from "@/images/gallery/gal2.png";
import Gal3 from "@/images/gallery/gal3.png";
import Gal4 from "@/images/gallery/gal4.png";
import Gal5 from "@/images/gallery/gal5.png";
import Gal6 from "@/images/gallery/gal6.png";
import Gal7 from "@/images/gallery/gal7.png";
import Gal8 from "@/images/gallery/gal8.png";
import Gal9 from "@/images/gallery/gal9.png";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title } = i18n.home.gallery;

const imagePaths = [Gal1, Gal2, Gal3, Gal4, Gal5, Gal6, Gal7, Gal8, Gal9];

const optimizedImages = await optimizeImages(imagePaths, 700, 500, "webp");
---

<GalleryRoom images={optimizedImages} client:visible title={title} />
