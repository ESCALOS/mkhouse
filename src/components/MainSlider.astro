---
import MainSliderItem from "./MainSliderItem.astro";
const images = Array.from({ length: 7 }, (_, i) => i + 1);
---

<swiper-container
  class="h-[44rem] min-[2560px]:h-[70rem] w-full"
  navigation="true"
  autoplay-delay="2500"
  loop="true"
  pagination="true"
  pagination-clickable="true"
>
  {
    images.map((image) => (
      <swiper-slide>
        <MainSliderItem
          id={image}
          imagePath={`/src/images/slide/${image}.webp`}
        />
      </swiper-slide>
    ))
  }
</swiper-container>

<script>
  import { register } from "swiper/element/bundle";

  register();
</script>

<style>
  :root {
    --swiper-navigation-color: #72a34c;
    --swiper-pagination-color: #72a34c;
    --swiper-pagination-bullet-inactive-color: white;
    --swiper-pagination-bullet-inactive-opacity: 1;
    --swiper-pagination-bullet-border-radius: 0.5rem;
    --swiper-pagination-bullet-width: 25px;
    --swiper-pagination-bullet-heigth: 6px;
    --swiper-pagination-bottom: 1rem;
  }
</style>
