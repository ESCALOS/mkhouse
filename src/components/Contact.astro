---
import { getI18N } from "@/i18n";
import ContactItem from "./ContactItem.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const {
  title,
  items,
  form: { inputs, buttonText },
} = i18n.contact;
---

<section id="contact">
  <div class="py-12 px-6 max-w-7xl mx-auto">
    <h2 class="text-4xl font-semibold text-center">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8 py-8">
      <div class="space-y-8 md:col-span-2">
        {items.map((item) => <ContactItem {...item} />)}
      </div>
      <div class="md:col-span-3">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            inputs.map(({ label, name, span }) => (
              <input
                class:list={[
                  "p-4 border border-gray-200 transition-all duration-300 bg-gray-100 focus:bg-white focus:border-secondary-500 rounded-md outline-none w-full",
                  `md:col-span-${span}`,
                ]}
                type="text"
                name={name}
                id={name}
                placeholder={label}
              />
            ))
          }
        </div>
        <div class="mt-4 text-end">
          <button
            class="p-4 text-center bg-secondary-500 hover:bg-secondary-600 transition-colors duration-500 rounded-md text-white text-lg"
          >
            {buttonText}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
