---
import { getImage } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  imagePath: string | ImageMetadata;
  alt: string;
}

const { imagePath, alt } = Astro.props;

const imageUrl = await getImage({
  src: imagePath,
  width: 700,
  height: 500,
  format: "webp",
});
---

<a
  href={imageUrl.src}
  data-pswp-width="700"
  data-pswp-height="500"
  target="_blank"
  data-cropped="true"
  aria-label="room"
>
  <img
    src={imageUrl.src}
    alt={alt}
    class:list={"object-cover object-top w-full h-full transition-all duration-500 rounded-md brightness-75 hover:brightness-100 cursor-zoom-in"}
    loading="lazy"
  />
</a>
